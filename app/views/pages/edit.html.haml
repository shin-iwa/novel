.d-flex.flex-column.align-items-center.mt-3
  .col-xl-7.col-lg-8.col-md-10.col-sm-11.post-card
    .card
      .card-header
        編集画面
      .card-body
        = form_with model: [@post, @page], class: "upload-images p-0 border-0" do |f|
          .form-group.row.mt-2
            .col-auto.pr-0
              -# = image_tag avatar_url(current_user), class: "post-profile-icon"
            .col.pl-0
              .card-body
                = form_with model: [@post, @page], class: "upload-images p-0 border-0" do |f|
                  .form-group.row.mt-2
                    .col-auto.pr-0
                    .col.pl-0
                      = f.hidden_field :user_id, value: current_user.id
                      = f.hidden_field :post_id, value: @post.id
                      = f.hidden_field :post_id, value: @page.id
                      = f.text_field :title , class: "form-control", placeholder: "タイトル"
                      = f.text_area :body, placeholder: "本文" , rows: "10", class: "form-control"
                      -# = f.text_field :caption, class: "form-control border-0", placeholder: "キャプションを書く"
                  .mb-3
                    = f.submit "修正する", class: "btn btn-primary"
